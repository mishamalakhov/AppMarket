<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:id="@+id/parentConstr"
    >


    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/email_and_pass_edittext"
        android:elevation="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:ems="13"
        android:hint="Почта"
        android:inputType="textEmailAddress"
        android:maxLength="25"
        android:padding="@dimen/_7sdp"
        android:singleLine="true"
        android:textSize="@dimen/_17ssp"


        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/email_and_pass_edittext"
        android:elevation="@dimen/_15sdp"
        android:ems="13"
        android:hint="Пароль"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLength="25"
        android:padding="@dimen/_7sdp"
        android:singleLine="true"
        android:textSize="@dimen/_17ssp"


        app:layout_constraintBottom_toTopOf="@+id/sign_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintVertical_bias="0.574" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#0000ff"
        android:shadowDx="2"
        android:shadowDy="7"
        android:elevation="@dimen/_15sdp"

        android:shadowRadius="5"
        android:text="@string/appstore_logo"
        android:textColor="@color/purple_500"
        android:textSize="@dimen/_40ssp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <Button
        android:id="@+id/sign_button"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/email_and_pass_edittext"
        android:backgroundTint="@color/purple_500"
        android:elevation="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="Войти"
        android:textColor="@color/white"
        android:textSize="@dimen/_17ssp"
        android:padding="@dimen/_5sdp"

        app:layout_constraintBottom_toTopOf="@+id/reg_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/reg_button"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/email_and_pass_edittext"
        android:backgroundTint="@color/reg_button"
        android:elevation="@dimen/_15sdp"
        android:text="Регистрация"
        android:textColor="@color/white"
        android:textSize="@dimen/_17ssp"
        android:padding="@dimen/_5sdp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.828" />



    <TextView
        android:id="@+id/error"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/email_and_pass_edittext"
        android:elevation="@dimen/_15sdp"
        android:padding="@dimen/_10sdp"
        android:text="fgfgfg"
        android:textSize="@dimen/_12ssp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.764" />

</androidx.constraintlayout.widget.ConstraintLayout>